<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Date_wise"
                android:text="Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/daily_cases"
                android:layout_below="@+id/Date_wise">

                <TextView
                    android:id="@+id/DailyConfirmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DailyConfirmed" />


                <TextView
                    android:id="@+id/DailyDeceased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DailyDeceased" />

                <TextView
                    android:id="@+id/DailyRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DailyRecovered" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/total_cases"
                android:layout_toRightOf="@+id/daily_cases"
                android:layout_below="@+id/Date_wise"
                android:layout_marginLeft="80dp">

                <TextView
                    android:id="@+id/TotalConfirmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TotalConfirmed" />

                <TextView
                    android:id="@+id/TotalDeceased"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TotalDeceased" />

                <TextView
                    android:id="@+id/TotalRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TotalRecovered" />
            </LinearLayout>
</RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>


